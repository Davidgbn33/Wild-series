{% extends 'base.html.twig' %}


{% block title %}Wild Series{% endblock %}


{% block body %}
<div class="d-flex flex-column align-items-center">
    <h1 class="my-3">Toutes les series</h1>
    <div class="d-flex flex-column">
    {% for program in programs %}
    <div>
        <h2 class="my-2">Catégorie : {{ program.category.name }}</h2>
        <h3> {{ program.title }}  </h3>
        <a class="WS_btnFiche" href="{{ path("program_show", { id: program.id}) }}">Voir la fiche</a>
    </div>
    {% else %}
     Aucun série trouvé.
    {% endfor %}
    </div>
</div>
{% endblock %}