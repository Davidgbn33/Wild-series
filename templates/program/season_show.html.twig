{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media d-flex justify-content-center">
        <div class="media-body d-flex flex-column align-items-center">
            <h1 class="mt-0">{{ program.title }}</h1>
            <h2>Liste des épisode</h2>

            {% for episode in season.episodes %}
            <p>{{ loop.index }} / {{ episode.number }} {{ season.year }}</p>
                <a class="WS_btnFiche" href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId: episode.id}) }}">Voir la fiche</a>
            {% endfor %}

        </div>
    </div>
{% endblock %}