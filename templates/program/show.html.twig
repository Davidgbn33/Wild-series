{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media d-flex justify-content-center">
        <div class="media-body d-flex flex-column align-items-center">
            <h1 class="mt-0">{{ program.title }}</h1>

            <img src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }}">
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Durée : {{ programDuration }} minutes</p>
           {% for seasons in program.seasons %}
               <a href="{{ path("program_season_show", { programId: program.id, seasonId: seasons.id}) }}">Saison : {{ seasons.number }}</a>
            {% endfor %}
        </div>
    </div>
{% endblock %}